<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <ImageView
        android:layout_width="340px"
        android:layout_height="340px"
        android:layout_marginTop="195px"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/bade" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="西邮助手"
        android:textSize="60px"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="爱 国、求 是、奋 进"
        android:layout_marginTop="7dp"
        android:textSize="10dp"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"/>


    <RelativeLayout
        android:id="@+id/bt_login_id"
        android:layout_marginTop="215px"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/login_id"
        android:layout_width="600px"
        android:layout_height="100px"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_marginStart="24dp"
            android:layout_centerVertical="true"
            android:layout_width="21dp"
            android:layout_height="23dp"
            android:src="@drawable/user"
            android:scaleType="fitXY"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:text="学号登录"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/bt_login_wechat"
        android:layout_marginTop="55px"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/login_wechat"
        android:layout_width="600px"
        android:layout_height="100px"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_marginStart="24dp"
            android:layout_centerVertical="true"
            android:layout_width="26dp"
            android:layout_height="28dp"
            android:src="@drawable/wechat"
            android:scaleType="fitXY"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:text="微信登录"/>

    </RelativeLayout>

</LinearLayout>